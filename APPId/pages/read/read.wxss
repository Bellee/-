.read-container{
    border-bottom: 1px solid #ebebeb;
    border-top: 1px solid #ebebeb;
    box-sizing: border-box;

}

.read-swiper{
  height: 400rpx;
}

.reads-container{
  height: 100%;
  border: 1px solid #ebebeb;
  border-radius: 3px;
  box-shadow: 1px 1px 1px #ebebeb;
  margin: 20rpx 20rpx;
  padding: 20rpx 20rpx;
}

.reads-content{
  height: 200rpx;
  padding: 10rpx;
  font-size: 12px;
  border-bottom: 1px solid #ebebeb;
  position: relative;
}

.reads-text{
    color: #888;
    display: inline-block;
    width: 550rpx;
}

.reads-look{ 
  position: absolute;
  left: 580rpx;
  top: 10rpx; 
  padding: 10rpx 15rpx;
  border: 1px solid #BFEFFF;
  color: #BFEFFF;
  border-radius: 2px;
}